@model MvcApplication1.Movie

@{
    var internalModel = new MvcApplication1.Models.Movie();
}

<h2>AddVideo</h2>

@using (Html.BeginForm("AddVideo", "Videos"))
{
    @Html.ValidationSummary(true)

    <div data-role="collapsible-set">
        <fieldset data-role="fieldContain">
            <legend>
                <div data-role="collapsible" data-collpased="false">

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.Name)
                    </div>
                    <div class="editor-field labelSpacing">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.YearId, "Year")
                    </div>
                    <div class="editor-field labelSpacing">
                        @Html.DropDownListFor(model => model.YearId, internalModel.LookupData.Years)
                        @Html.ValidationMessageFor(model => model.YearId)
                    </div>

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.Directors)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Directors)
                        @Html.ValidationMessageFor(model => model.Directors)
                    </div>

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.Description)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.Stars)
                    </div>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Stars)
                        @Html.ValidationMessageFor(model => model.Stars)
                    </div>

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.RatingId, "Rating")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.RatingId, internalModel.LookupData.Rating)
                        @Html.ValidationMessageFor(model => model.RatingId)
                    </div>

                    <div class="editor-label labelSpacing">
                        @Html.LabelFor(model => model.GenreId, "Genre")
                    </div>
                    <div class="editor-field">
                        @Html.DropDownListFor(model => model.GenreId, internalModel.LookupData.Genre)
                        @Html.ValidationMessageFor(model => model.GenreId)
                    </div>
                    <br />
                </div>

                <div data-role="collapsible" data-collpased="true">
                    @Html.Partial("MovieMetadataDetails",Model.MetadataId)
                </div>

